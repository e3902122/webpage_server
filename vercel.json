{
  "version": 2,
  "builds": [
    {
      "src": "app/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "app/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app/public/$1"
    }
  ]
}